# Local development environment variables
# Python runs locally, services run in Docker

# MongoDB Configuration (local access)
MONGODB_URL=mongodb://api_user:api_password@localhost:27017/korea_public_api
DATABASE_NAME=korea_public_api
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=change_me
MONGO_INITDB_DATABASE=korea_public_api

# Redis Configuration (local access)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Public Data API Configuration
PUBLIC_DATA_API_KEY=your_api_key
PUBLIC_DATA_API_KEY_DECODE=your_decoded_api_key
API_BASE_URL=https://apis.data.go.kr/B552735/kisedKstartupService01

# Application Settings
DEBUG=True
LOG_LEVEL=DEBUG
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Security Settings (for local development)
SECRET_KEY=your-secret-key-for-local-development
JWT_SECRET_KEY=your-jwt-secret-key-for-local-development
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
CSRF_ENABLED=false
FAIL_CLOSE_ON_BLACKLIST_ERROR=false

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# Alert System Configuration
ALERTS_ENABLED=true
ALERTS_GLOBAL_RPS=10
ALERTS_USER_DAILY_CAP=100

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@korea-public-api.local
EMAIL_USE_TLS=true

# Notification Webhooks (optional)
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# Monitoring (optional)
FLOWER_PASSWORD=secure_password
GRAFANA_PASSWORD=admin

# Testing
TESTING=false
TEST_DATABASE_NAME=korea_public_api_test